---
import BaseHead from "../components/layouts/BaseHead.astro";
import Header from "../components/layouts/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .hero-image {
        transition: all 300ms ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        margin-top: 1rem;
        margin-inline: auto;
        background-size: cover;
        width: 90%;
        gap: 1rem;
        background-color: color-mix(in srgb, white 90%, var(--accent) 50%);
        color: color-mix(in srgb, black 90%, var(--accent) 10%);
        border-radius: 1rem;
      }

      .hero-image h1 {
        color: color-mix(in srgb, black 90%, var(--accent) 10%);
        font-size: 3rem;
      }

      a {
        text-decoration: none;
      }
      a button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        background-color: color-mix(in srgb, black 40%, var(--accent) 30%);
        color: color-mix(in srgb, white 90%, var(--accent) 10%);
        border: none;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border-radius: 999px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
      }

      a button:hover {
        background-color: color-mix(in srgb, black 50%, var(--accent) 25%);
      }

      @media (prefers-color-scheme: dark) {
        .hero-image {
          background-color: color-mix(in srgb, black 50%, var(--accent) 35%);
          color: color-mix(in srgb, white 90%, var(--accent) 10%);
        }
        .hero-image h1 {
          color: color-mix(in srgb, white 90%, var(--accent) 10%);
        }
        a button {
          background-color: color-mix(in srgb, black 50%, var(--accent) 60%);
          color: color-mix(in srgb, white 70%, var(--accent) 35%);
        }
        }
      }
    </style>
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main transition:animate="fade">
      <div data-background-image="/heroHome.png" class="hero-image">
        <h1>Welcome to my Blog!</h1>
        <p>Use the Navigation Rail/Bar to navigate or press this button:</p>
        <a href="/blog"><button><span class="material-symbols-outlined">article</span>View Posts</button></a>
      </div>
    </main>
  </body>
</html>

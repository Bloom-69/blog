---
import BaseHead from "../../components/layouts/BaseHead.astro";
import Header from "../../components/layouts/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/layouts/FormattedDate.astro";
import Search from "../../components/search";

const posts = (await getCollection("blog")).sort(
  (a: any, b: any) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      @media (max-width: 940px) {
        section {
          padding-bottom: 1rem;
        }
      }
      main {
        display: flex;
        flex-direction: column;
      }
      div.grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 16px;
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
        padding: 0;
        align-content: center;
      }
      div.card {
        background-color: var(--md-sys-color-surface-container);
        max-width: 720px;
        width: 100%;
        height: 100%;
        border-radius: 1rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        gap: 16px;
        transition:
          background 0.3s ease,
          border-radius 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      }

      div.card:hover {
        border-radius: 2rem;
        background-color: var(--md-sys-color-surface-container-highest);
      }

      div.card img {
        transition: border-radius 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border-radius: 0.7rem 0.7rem 0.5rem 0.5rem;
      }

      div.card:hover img {
        border-radius: 1.3rem 1.3rem 0.5rem 0.5rem;
      }

      div.content {
        padding: 16px;
      }

      a {
        display: block;
        text-decoration: none;
      }
      .title {
        margin: 0;
        color: color-mix(in srgb, black 90%, var(--accent) 10%);
        line-height: 1;
      }
      .date {
        margin: 0;
        color: color-mix(in srgb, black 80%, var(--accent) 20%);
      }
    </style>
  </head>
  <body>
    <Header />
    <main transition:animate="fade">
      <section>
        <Search client:load searchList={posts} />
        <div class="grid-container">
          {
            posts.map((post) => (
              <a astro:data-reload href={`/blog/${post.slug}/`}>
                <div class="card">
                  <div class="content">
                    {post.data.heroImage && (
                      <img
                        loading="lazy"
                        data-background-image={post.data.heroImage}
                        width={720}
                        height={360}
                        src={post.data.heroImage}
                        alt={post.data.description}
                        title={post.data.title}
                      />
                    )}
                    <h4 class="title">{post.data.title}</h4>
                    <p class="date">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </section>
    </main>
  </body>
</html>
